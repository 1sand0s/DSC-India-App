<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dsc.dscindia.Pasting"
    android:background="@drawable/hexback">
 <ScrollView 
       android:id="@+id/scrollView7"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:layout_alignParentRight="true"
       android:layout_alignParentStart="true"
       android:fadeScrollbars="true"
       android:verticalScrollbarPosition="right" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
       >

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="400dip"
            android:layout_height="45dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo1" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="250dip"
            android:layout_height="57dip"
            android:layout_below="@+id/imageView10"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo2"
            android:src="@drawable/logo2" />

        <Button
            android:id="@+id/button6"
            style="@style/cusbut1"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignLeft="@+id/imageView11"
            android:layout_alignStart="@+id/imageView11"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/imageView11"
            android:background="@drawable/cusbut1"
            android:clickable="true"
            android:text="Home"
            android:alpha="0.7"
            android:textColor="#ff000000"
            android:textSize="10dip"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button7"
            style="@style/cusbut1"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignTop="@+id/button6"
            android:layout_toEndOf="@+id/button6"
            android:layout_toRightOf="@+id/button6"
            android:background="@drawable/cusbut"
            android:clickable="true"
            android:text="Products"
            android:textColor="#ff000000"
            android:textSize="10dip"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button8"
            style="@style/cusbut1"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignTop="@+id/button7"
            android:layout_toEndOf="@+id/button7"
            android:layout_toRightOf="@+id/button7"
            android:background="@drawable/cusbut"
            android:clickable="true"
            android:text="Contact"
            android:alpha="0.7"
            android:textColor="#ff000000"
            android:textSize="10dip"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button6"
            android:layout_centerHorizontal="true"
            android:text="CURING &amp; DRYING MACHINE"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffa4090a"
            android:textIsSelectable="false"
            android:textSize="17dip"
            android:textStyle="bold|italic"
            android:typeface="monospace"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView29"
            android:text="SDG-I Curing &amp; Drying Chamber"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff000000"
            android:textSize="10dip"
            android:textStyle="normal|italic" />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black"
            android:alpha="0.7"
            android:layout_below="@+id/textView29"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="220dip"
                android:layout_height="220dip"
                android:layout_marginLeft="35dip"
                android:layout_marginTop="35dip"
                android:background="@drawable/tron7" />
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:textSize="17dip"
                android:text="MAIN CHAMBER"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:textSize="14dip"
                android:text="5000mm*2500mm*3100mm\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:textSize="17dip"
                android:text="AUXILLARY CHAMBER"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:textSize="14dip"
                android:text="5000mm*1400mm*1200mm\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text5"
                android:textSize="17dip"
                android:text="VALID CUBAGE"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text6"
                android:textSize="14dip"
                android:text="4250mm*3250mm*3000mm\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text7"
                android:textSize="17dip"
                android:text="CONTROL RANGE"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text8"
                android:textSize="14dip"
                android:text="TEMPERATURE:ROOM\nTemperature-95C\nHUMIDITY:1-100%RH\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text9"
                android:textSize="17dip"
                android:text="CONTROL ACCURACY"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text10"
                android:textSize="14dip"
                android:text="TEMPERATURE:(+-)1C\nHUMIDITY:(+-)2%RH\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text11"
                android:textSize="17dip"
                android:text="WAY OF HEATING"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text12"
                android:textSize="14dip"
                android:text="Electrical heating\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text13"
                android:textSize="17dip"
                android:text="WAYS OF MOISTURING"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text14"
                android:textSize="14dip"
                android:text="Steam pulsing,Mist spraying or using moisturizing machine\n"/>
             <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text15"
                android:textSize="17dip"
                android:text="POWER SUPPLY"/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text16"
                android:textSize="14dip"
                android:text="3 Phase,380V,50Hz\nPower:Electrical Heating, 120kW\nWinnower:7.5kW\nWater:0.2Mpa~0.4Mpa\nCompressed Air:0.4Mpa~0.6Mpa\n"/>

        </LinearLayout>
        <TextView
            android:id="@+id/textView30"
            android:layout_width="200sp"
            android:layout_height="15sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="copyrights @ DSC INDIA control &amp; machineries Pvt.Ltd. Bangalore: 560099, phone: 080-27839989, mob: +91-9740608888."
            android:textColor="#ffa9a9a9"
            android:textSize="6sp" />
    </RelativeLayout>

</ScrollView>
</RelativeLayout>
