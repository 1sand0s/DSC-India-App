<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dsc.dscindia.Vrla"
    android:background="@drawable/hexback">
 <ScrollView 
       android:id="@+id/scrollView7"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:layout_alignParentRight="true"
       android:layout_alignParentStart="true"
       android:fadeScrollbars="true"
       android:verticalScrollbarPosition="right" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <ImageView
        android:layout_width="250dip"
        android:layout_height="57dip"
        android:id="@+id/imageView6"
        android:background="@drawable/logo2"
        android:src="@drawable/logo2"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="400dip"
        android:layout_height="45dip"
        android:id="@+id/imageView7"
        android:background="@drawable/logo1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/cusbut1"
        android:layout_width="60dip"
        android:layout_height="30dip"
        android:text="Home"
        android:id="@+id/button"
        android:background="@drawable/cusbut"
        android:clickable="true"
        android:textColor="#ff000000"
        android:textSize="10dip"
        android:alpha="0.7"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:textStyle="normal" />

    <Button
        style="@style/cusbut1"
        android:layout_width="60dip"
        android:layout_height="30dip"
        android:text="Products"
        android:id="@+id/button4"
        android:textSize="10dip"
        android:clickable="true"
        android:textColor="#ff000000"
        android:background="@drawable/cusbut"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:textStyle="normal" />

    <Button
        style="@style/cusbut1"
        android:layout_width="60dip"
        android:layout_height="30dip"
        android:text="Contact"
        android:id="@+id/button5"
        android:textSize="10dip"
        android:clickable="true"
        android:alpha="0.7"
        android:textColor="#ff000000"
        android:background="@drawable/cusbut"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:textStyle="normal" />
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/black"
	    android:layout_below="@+id/textView27"
	    android:alpha="0.7"
	    android:orientation="vertical">
	    <ImageView
	        android:id="@+id/image"
	        android:layout_width="220dip"
	        android:layout_height="220dip"
	        android:layout_marginLeft="35dip"
	        android:layout_marginTop="35dip"
	        android:background="@drawable/tron8"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="17dip"
	        android:id="@+id/text1"
	        android:text="APPLICABILITY"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="14dip"
	        android:id="@+id/text2"
	        android:text="MOTORCYCLE BATTERY\nUPS BATTERY\nELECTRIC VEHICLE BATTERY\nOTHER BATTERY\n"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="17dip"
	        android:id="@+id/text3"
	        android:text="APPLICABLE TO ALLOY"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="14dip"
	        android:id="@+id/text4"
	        android:text="LEAD ANTIMONY ALLOY\nLEAD CADMIUM ALLOY\nLEAD ANITMONY CADMIUM ALLOY\n"/>
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/text5"
	        android:textSize="20dip"
	        android:text="TECHNICAL PARAMETERS\n"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="17dip"
	        android:id="@+id/text6"
	        android:text="SPEED OF CASTING AND WELDING"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="14dip"
	        android:id="@+id/text7"
	        android:text="50-100 CYCLES PER SECOND\n"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="17dip"
	        android:id="@+id/text8"
	        android:text="AIR SOURCE"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="14dip"
	        android:id="@+id/text9"
	        android:text="COMPRESSED AIR OF 0.6Mpa\n"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="17dip"
	        android:id="@+id/text10"
	        android:text="AIR CONSUMPTION"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="14dip"
	        android:id="@+id/text11"
	        android:text="1METER CUBE/MIN\n"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="17dip"
	        android:id="@+id/text12"
	        android:text="WATER CONSUMPTION"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="14dip"
	        android:id="@+id/text13"
	        android:text="2-4L/MIN\n"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="17dip"
	        android:id="@+id/text14"
	        android:text="DIMENSION"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="14dip"
	        android:id="@+id/text15"
	        android:text="2650mm(L)*1200mm(W)*1100mm(H)\n"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="17dip"
	        android:id="@+id/text16"
	        android:text="NET WEIGHT"/>
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="14dip"
	        android:id="@+id/text17"
	        android:text="About 1 Ton\n"/>
	    
	    
	</LinearLayout>
    <TextView
        android:layout_width="200sp"
        android:layout_height="15sp"
        android:text="copyrights @ DSC INDIA control &amp; machineries Pvt.Ltd. Bangalore: 560099, phone: 080-27839989, mob: +91-9740608888."
        android:id="@+id/textView26"
        android:textColor="#ffa9a9a9"
        android:textSize="6sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:text="VRLA COS"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffa4090a"
        android:textIsSelectable="false"
        android:textSize="17dip"
        android:textStyle="bold|italic"
        android:typeface="monospace"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="57dp"
        android:layout_toLeftOf="@+id/button4"
        android:text="VRLA COS"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff000000"
        android:textSize="10dip"
        android:textStyle="normal|italic" />

</RelativeLayout>


</ScrollView>

</RelativeLayout>