<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hexback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dsc.dscindia.Pasting" >

    <ScrollView
        android:id="@+id/scrollView7"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:fadeScrollbars="true"
        android:verticalScrollbarPosition="right" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/textView29"
                android:background="@drawable/black"
                android:alpha="0.7" >
                <ImageView 
                    android:id="@+id/image"
                    android:layout_width="230dip"
                    android:layout_height="220dip"
                    android:layout_marginLeft="30dip"
                    android:layout_marginTop="30dip"
                    android:background="@drawable/tron4"/>
                <TextView 
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Mould Opening rate"/>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="5~12(Times)/min\n"/>
                <TextView 
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Lead pot capacity"/>
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="400kg\n"/>
                <TextView 
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Lead pot heater"/>
                <TextView
                    android:id="@+id/text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="220V 12kW\n"/>
                  <TextView 
                    android:id="@+id/text7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Lead bucket heater"/>
                <TextView
                    android:id="@+id/text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="3loops,380V 3.0kW\n"/>
                  <TextView 
                    android:id="@+id/text9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Motor"/>
                <TextView
                    android:id="@+id/text10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="220V 40W\n"/>
                  <TextView 
                    android:id="@+id/text11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Speed reducer"/>
                <TextView
                    android:id="@+id/text12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="1/40\n"/>
                  <TextView 
                    android:id="@+id/text13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Mould cylinder"/>
                <TextView
                    android:id="@+id/text14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="SC80*100\n"/>
                  <TextView 
                    android:id="@+id/text15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Fliping cylinder"/>
                <TextView
                    android:id="@+id/text16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="MAL32*100\n"/>
                  <TextView 
                    android:id="@+id/text17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Cutting cylinder"/>
                <TextView
                    android:id="@+id/text18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="SDA 100*30\n"/>
                  <TextView 
                    android:id="@+id/text19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Lead pot cylinder"/>
                <TextView
                    android:id="@+id/text20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="SDA 40*25\n"/>
                  <TextView 
                    android:id="@+id/text21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Mould clamping pressure"/>
                <TextView
                    android:id="@+id/text22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="4~6Kgf/c\n"/>
                  <TextView 
                    android:id="@+id/text23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Air input"/>
                <TextView
                    android:id="@+id/text24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="0~1Mpa\n"/>
                  <TextView 
                    android:id="@+id/text25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Air flow"/>
                <TextView
                    android:id="@+id/text26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="0.15m3/min\n"/>
                  <TextView 
                    android:id="@+id/text27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Machine Dimensions(L*W*H)"/>
                <TextView
                    android:id="@+id/text28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="1600*930*2200(mm)\n"/>
                  <TextView 
                    android:id="@+id/text29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Machine Weight"/>
                <TextView
                    android:id="@+id/text30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="512kg\n"/>
                  <TextView 
                    android:id="@+id/text31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Packing Dimensions(L*W*H)"/>
                <TextView
                    android:id="@+id/text32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="1700*1050*2300(mm)\n"/>
                  <TextView 
                    android:id="@+id/text33"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dip"
                    android:text="Packing Weight"/>
                <TextView
                    android:id="@+id/text34"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dip"
                    android:text="612kg\n"/>"
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="400dip"
                android:layout_height="45dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo1" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="250dip"
                android:layout_height="57dip"
                android:layout_below="@+id/imageView10"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo2"
                android:src="@drawable/logo2" />

            <Button
                android:id="@+id/button6"
                style="@style/cusbut1"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignLeft="@+id/imageView11"
                android:layout_alignStart="@+id/imageView11"
                android:layout_alignWithParentIfMissing="false"
                android:layout_below="@+id/imageView11"
                android:background="@drawable/cusbut1"
                android:clickable="true"
                android:text="Home"
                android:alpha="0.7"
                android:textColor="#ff000000"
                android:textSize="10dip"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button7"
                style="@style/cusbut1"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignTop="@+id/button6"
                android:layout_toEndOf="@+id/button6"
                android:layout_toRightOf="@+id/button6"
                android:background="@drawable/cusbut1"
                android:clickable="true"
                android:text="Products"
                android:textColor="#ff000000"
                android:textSize="10dip"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button8"
                style="@style/cusbut1"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignTop="@+id/button7"
                android:layout_toEndOf="@+id/button7"
                android:layout_toRightOf="@+id/button7"
                android:background="@drawable/cusbut1"
                android:clickable="true"
                android:text="Contact"
                android:alpha="0.7"
                android:textColor="#ff000000"
                android:textSize="10dip"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageView11"
                android:layout_below="@+id/button6"
                android:layout_centerHorizontal="true"
                android:singleLine="false"
                android:text="TERMINAL/SMALL PARTS CASTING   MACHINE"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffa4090a"
                android:textIsSelectable="false"
                android:textSize="10dip"
                android:textStyle="bold|italic"
                android:typeface="monospace"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="200sp"
                android:layout_height="15sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView29"
                android:text="copyrights @ DSC INDIA control &amp; machineries Pvt.Ltd. Bangalore: 560099, phone: 080-27839989, mob: +91-9740608888."
                android:textColor="#ffa9a9a9"
                android:textSize="6sp" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>