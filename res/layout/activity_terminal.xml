<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dsc.dscindia.Pasting" >

    <ScrollView
        android:id="@+id/scrollView7"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:fadeScrollbars="true"
        android:verticalScrollbarPosition="right" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="400dip"
                android:layout_height="45dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo1" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="250dip"
                android:layout_height="57dip"
                android:layout_below="@+id/imageView10"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo2"
                android:src="@drawable/logo2" />

            <Button
                android:id="@+id/button6"
                style="@style/cusbut1"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignLeft="@+id/imageView11"
                android:layout_alignStart="@+id/imageView11"
                android:layout_alignWithParentIfMissing="false"
                android:layout_below="@+id/imageView11"
                android:background="@drawable/cusbut1"
                android:clickable="true"
                android:text="Home"
                android:textColor="#ff000000"
                android:textSize="10dip"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button7"
                style="@style/cusbut1"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignTop="@+id/button6"
                android:layout_toEndOf="@+id/button6"
                android:layout_toRightOf="@+id/button6"
                android:background="@drawable/cusbut1"
                android:clickable="true"
                android:text="Products"
                android:textColor="#ff000000"
                android:textSize="10dip"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button8"
                style="@style/cusbut1"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:layout_alignTop="@+id/button7"
                android:layout_toEndOf="@+id/button7"
                android:layout_toRightOf="@+id/button7"
                android:background="@drawable/cusbut1"
                android:clickable="true"
                android:text="Contact"
                android:textColor="#ff000000"
                android:textSize="10dip"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="500dip"
                android:layout_height="320dip"
                android:layout_below="@+id/button6"
                android:layout_centerHorizontal="true"
                android:background="#ffffffff" />

            

            <TextView
                android:id="@+id/textView31"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/imageView14"
                android:text="DS-148D Termainal/Small Parts                       Casting"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ff000000"
                android:textSize="10dip"
                android:textStyle="normal|italic" />

           

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageView14"
                android:layout_alignLeft="@+id/imageView12"
                android:layout_alignRight="@+id/imageView11"
                android:layout_alignTop="@+id/imageView12"
                android:singleLine="false"
                android:text="TERMINAL/SMALL PARTS CASTING   MACHINE"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffa4090a"
                android:textIsSelectable="false"
                android:textSize="10dip"
                android:textStyle="bold|italic"
                android:typeface="monospace"
                android:visibility="visible" />
             <ImageView
                android:id="@+id/imageView14"
                android:layout_width="150dip"
                android:layout_height="250dip"
                android:layout_below="@+id/textView29"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/button8"
                android:background="@drawable/terminalpage" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="120dip"
                android:layout_height="100dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@drawable/treminal" />
            <TextView
                android:id="@+id/textView30"
                android:layout_width="200sp"
                android:layout_height="15sp"
                android:layout_alignLeft="@+id/imageView14"
                android:layout_below="@+id/imageView14"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/imageView14"
                android:text="copyrights @ DSC INDIA control &amp; machineries Pvt.Ltd. Bangalore: 560099, phone: 080-27839989, mob: +91-9740608888."
                android:textColor="#ffa9a9a9"
                android:textSize="6sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>